<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    xmlns:Tools="http://schemas.android.com/tools"
    android:layout_marginTop="3dp"
    android:background="@color/card_deta_fondo"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="57dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtPagp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:textStyle="bold"
                Tools:text="Detalle Cuenta"
                android:textColor="@color/card_deta_text_titulo"/>

            <TextView
                android:id="@+id/txtDetallePagp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:textColor="@color/card_deta_texto_detalle"
                android:textSize="12sp"
                android:textStyle="bold"
                Tools:ignore="SmallSp"
                Tools:text="Detalle Cuenta" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">


            <TextView
                android:id="@+id/txtCreDeb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                Tools:text="credito"
                android:textSize="17sp"
android:textColor="@color/card_deta_texto_detalle"
                android:textStyle="bold"
                android:gravity="end"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txtMoneda"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/moneda"
                    android:textSize="20sp"
                    android:textAllCaps="true"
                    android:gravity="end"
                    android:textStyle="bold"
                    android:layout_marginEnd="5dp"/>
                <TextView
                    android:id="@+id/txtCantidad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    Tools:text="L 5000"
                    android:textSize="20sp"
                    android:textAllCaps="true"
                    android:gravity="end"
                    android:textStyle="bold"/>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>